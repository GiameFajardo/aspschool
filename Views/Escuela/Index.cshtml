@model Escuela
@{
    ViewData["Title"] = "Escuela";
    Layout = "Simple";
}
<h1>@ViewData["Title"]</h1>
<h2>Nombre:  @Model.Nombre  </h2>
<h3>Tipo de escuela: @Model.TipoEscuela</h3>
<address>
    <p>Direccion: @Model.Dirección</p>
    <p>Pais: @Model.Pais</p>
    <p>Ciudad: @Model.Ciudad</p>
</address>

<p>Año en que fue fundada: @Model.AñoDeCreación</p>

<p><i>@ViewBag.CosaDinamica</i></p>